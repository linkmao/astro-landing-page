---
import features from '../data/features.json'

---

<h1 class="text-5xl font-bold text-center my-4">Features</h1>

<div class="grid md:grid-cols-3 gap-4  " >
    {features.map(f=>{
      return (
        <div class="bg-slate-500  rounded-lg p-10"> 
         <h1 class="text-2xl font-bold my-4">{f.title}</h1>
          <p>{f.description}</p>
         </div>  
      )
    })
    }
</div>

